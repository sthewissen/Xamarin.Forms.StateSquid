<Project Sdk="MSBuild.Sdk.Extras/1.6.61">

  <PropertyGroup>
  	<TargetFrameworks>netstandard2.0;Xamarin.iOS10;MonoAndroid81;MonoAndroid90</TargetFrameworks>
    
    <!--Assembly and Namespace info -->
    <AssemblyName>Xamarin.Forms.StateSquid</AssemblyName>
    <RootNamespace>Xamarin.Forms.StateSquid</RootNamespace>
    
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <AssemblyFileVersion>1.0.0.0</AssemblyFileVersion>
    <Version>1.0.0.0</Version>
    <PackOnBuild>true</PackOnBuild>
    <NeutralLanguage>en</NeutralLanguage>
    <LangVersion>default</LangVersion>
    <DefineConstants>$(DefineConstants);</DefineConstants>
     
    <UseFullSemVerForNuGet>false</UseFullSemVerForNuGet>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <LangVersion>latest</LangVersion>

    <PackageProjectUrl>https://github.com/sthewissen/Xamarin.Forms.StateSquid</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/sthewissen/Xamarin.Forms.StateSquid/master/images/icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/sthewissen/Xamarin.Forms.StateSquid</RepositoryUrl>
    <PackageTags>xamarin, ios, android, xamarin.forms, control, loading, layout, skeleton, loader, view, empty, saving, error, state</PackageTags>

    <Title>StateSquid for Xamarin.Forms</Title>
    <Summary>A collection of attached properties that let you specify different state views for any of your existing layouts.</Summary>
    <Description>A collection of attached properties that let you specify different state views for any of your existing layouts.</Description>

    <Owners>Steven Thewissen</Owners>
    <Authors>Steven Thewissen</Authors>
    <Copyright>Copyright 2019 Steven Thewissen</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    
  </PropertyGroup>
  
  <!-- Define what happens on build and release -->
   <PropertyGroup Condition=" '$(Configuration)'=='Debug' ">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(Configuration)'=='Release' ">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <DebugType>pdbonly</DebugType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Include="Platforms\Shared\**\*.cs" />

    <!--NuGet that bring in good stuff -->
    <PackageReference Include="Xamarin.Forms" Version="4.2.0.778463" />

  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <Compile Include="Platforms\iOS\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <Compile Include="Platforms\Android\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Platforms\" />
    <Folder Include="Platforms\Shared\" />
  </ItemGroup>
  <ItemGroup>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="Platforms\Shared\State.cs">
      <SubType></SubType>
    </Compile>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="Platforms\Shared\StateDataTemplate.cs">
      <SubType></SubType>
    </Compile>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="Platforms\Shared\StateLayoutController.cs">
      <SubType></SubType>
    </Compile>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="Platforms\Shared\StateToBooleanConverter.cs">
      <SubType></SubType>
    </Compile>
  </ItemGroup>
   <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
</Project>